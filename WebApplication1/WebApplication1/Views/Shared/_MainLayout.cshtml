<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />\
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/jquery-ajax-unobtrusive/JavaScript.js"></script>
</head>
<body>
    <div>
        <header class="site-header sticky-top py-1">
            <nav class="container d-flex flex-column flex-md-row justify-content-between">
                <a href="../Applications/All">Просмотреть заявки</a>
                <a href="../Applications/My">Мои заявки</a>
                <a href="../Applications/Add">Добавить заявку</a>
                @{
                    if (!(ViewBag.UserName is null))
                    {
                        <p>Вы вошли под именем @ViewBag.UserName</p>
                    }
                    else
                    {
                        <a href="../Registration/Registration"> Регистрация / Вход </a>
                    }
                }

            </nav>
        </header>
        <div class="container">
            
            <div class="row">
                <div class="col-2 backcolforpanel">


                </div>
                <div class="col-8">
                    @RenderBody()
                </div>
                <div class="col-2 backcolforpanel">



                </div>
            </div>
        </div>
    </div>
</body>
</html>