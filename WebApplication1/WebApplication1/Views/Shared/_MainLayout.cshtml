<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/nullStyle.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/_Layout.css" rel="stylesheet" />
    <link href="~/css/chat.css" rel="stylesheet" />
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/jquery-ajax-unobtrusive/JavaScript.js"></script>
</head>
<body>
    <div>
        <div class="header">
                <div class="header__content">
                    <a class="header__content__link" href="../Applications/All">Просмотреть заявки</a>
                <a class="header__content__link" href="../Applications/My">Мои заявки</a>
                <a class="header__content__link" href="../Applications/Add">Добавить заявку</a>
                @{
                    if (!(ViewBag.UserName is null))
                    {

                        <a class="header__content__link" href="../Chat/Index">Чаты</a>
                        <p class="header__content__link">Вы вошли под именем @ViewBag.UserName</p>
                    }
                    else
                    {
                        <a class="header__content__link" href="../Registration/Registration"> Регистрация / Вход </a>
                    }
                }

                </div>
        </div>
        <div class="container">
            <div class="content">
                    @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>