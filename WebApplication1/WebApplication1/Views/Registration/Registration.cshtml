@{
    Layout = null;
}
@model RegistrationViewModel


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Регистрация</title>
</head>
<body>
    <form form method="post" data-ajax="true" data-ajax-complete="myComplete" asp-action="Registration" asp-controller="Registration" asp-antiforgery="true">
        <div>
            <p>Ваше имя:</p>
            <input asp-for="Name" />
            <span asp-validation-for="Name" class="field-validation-valid" data-valmsg-for="Name" data-valmsg-replace="true"></span>
        </div>
        <div>
            <p>Ваш пароль:</p>
            <input asp-for="Password" />
            <span asp-validation-for="Password" class="field-validation-valid" data-valmsg-for="Password" data-valmsg-replace="true"></span>
        </div>
        <div>
            <p>Подтвердите ваш пароль:</p>
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" class="field-validation-valid" data-valmsg-for="ConfirmPassword" data-valmsg-replace="true"></span>
        </div>
        <div>
            <p>Введвите ваш дискорд</p>
            <input asp-for="DiscordName" />
            <span asp-validation-for="DiscordName" class="field-validation-valid" data-valmsg-for="ConfirmPassword" data-valmsg-replace="true"></span>
            <span>#</span>
            <input type="number" asp-for="DiscordSharp" required />
            <span asp-validation-for="DiscordSharp" class="field-validation-valid" data-valmsg-for="ConfirmPassword" data-valmsg-replace="true"></span>
        </div>
        <div>

        </div>
        <div>
            <input type="submit" value="enter" />
        </div>
        <div>
            <p>Уже есть аккаунт?<p>
                <a href="~/Autorisation/AutorisationToTheSite">Войти</a>
        </div>
    </form>
    <div>
        <i class="heart fa fa-heart-o"></i>
    </div>
</body>
</html>

<h1>форма регистрации</h1>
