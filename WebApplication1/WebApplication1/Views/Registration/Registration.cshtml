@{
    Layout = null;
}
@model User
@using BSTeamSearch.Validators;
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Регистрация</title>
</head>
<body>
    <form asp-action="Registration" asp-controller="Registration" asp-antiforgery="true">
        <div>
            <p>Ваше имя:</p>
            <input asp-for="Name" />
            <span asp-validation-for="Name" class="field-validation-valid" data-valmsg-for="Name" data-valmsg-replace="true"></span>
        </div>
        <div>
            <p>Ваш пароль:</p>
            <input asp-for="Password"/>
            <span asp-validation-for="Password" class="field-validation-valid" data-valmsg-for="Password" data-valmsg-replace="true"></span>
        </div>
        <div>
            <input type="submit" value="enter" />
        </div>
        <div>
            <p>Уже есть аккаунт?<p>
            <a href="~/Autorisation/AutorisationToTheSite">Войти</a>
        </div>
    </form>
</body>
</html>

<h1>форма регистрации</h1>
