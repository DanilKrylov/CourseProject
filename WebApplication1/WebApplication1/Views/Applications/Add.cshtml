
@{
    Layout = "_MainLayout";
}
@model Application
@using (Html.BeginForm())
{
    <div>
        
    </div>
    <div>
        
    </div>
    <div>
        <p>Выберите бравлера</p>
        <div>
            <select asp-for="BrawlerName">
                @{ 
                    foreach(Brawler elem in ViewBag.Brawlers)
                    {
                        <option >@elem.Name</option>
                    }
                }
            </select>
        </div>
        <p>Выберите количество кубков</p>
        <div>
            
            <select asp-for="CountOfCups">
                @{
                    for (int i = 0; i < 20; i++)
                    {
                        int cups = i * 50;

                        <option>@cups</option>
                    }
                }
            </select>
        </div>
    </div>
    <input type="submit" value="Отправить" />
}
