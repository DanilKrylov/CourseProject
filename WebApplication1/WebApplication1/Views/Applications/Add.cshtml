
@{
    Layout = "_MainLayout";
}
@model ApplicationAddViewModel
    <link href="~/css/add.css" rel="stylesheet" />
<div class="add">
    <div class="add__content">
        <div class="add__content__title"><span class="text2">Создание заявки</span></div>
        <div class="add__content__form">
            <form asp-action="Add" asp-controller="Applications" method="post">
                <p class="text3 add__input__label">Выберите бравлера:</p>
                <select asp-for="BrawlerName">
                    @{
                        foreach (Brawler elem in ViewBag.Brawlers)
                        {
                            <option>@elem.Name</option>
                        }
                    }
                </select>
                <p class="text3 add__input__label">Выберите количество кубков:</p>
                <input type="number" required asp-for="CountOfCups" />
                <span asp-validation-for="CountOfCups"></span>
                <p class="text3 add__input__label">Есть ли у вас возможость общаться по голосовому чату?</p>
                <select asp-for="HasVoiceChat">
                    <option value="false">Нет</option>
                    <option value="true">Да</option>
                </select>
                <p class="text3 add__input__label">Напишите пару слов о себе и о данной заявке</p>
                <textarea type="text" asp-for="Description" placeholder="например в каком режиме хотите играть, в какоевремя вам удобно играть"></textarea>
                <span asp-validation-for="Description"></span>
                <input class="add__submit" type="submit" value="Отправить" />
            </form>
        </div>
    </div>
</div>
